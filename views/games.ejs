        <% for (var i=0; i<OGgames.length; i++){ %>
          <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
              <div class="card card-games">
                <div class="card-header card-header-colored">
                  <h3><%= OGgames[i].gameDate.toISOString().split('T')[0] %> <br /></h3>
                  <h5>Game #<%= OGgames[i].gameID %></h5>
                </div>
                <div class="card-body card-body-colored">
                  <div class="row">
                    <div class="col">
                      <h5>Team 1 - <%= OGgames[i].team1Score %></h5>
                      <p><%= Players[(OGgames[i].T1P1)-1].firstName %><br />
                         <%= Players[(OGgames[i].T1P2)-1].firstName %>
                      </p>
                    </div>
                    <div class="col">
                      <h5>Team 2 - <%= OGgames[i].team2Score %></h5>
