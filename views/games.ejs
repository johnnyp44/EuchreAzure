<!-- Games Section -->
<section class="colored-section" id="games">
  <div id="games-carousel" class="carousel slide" data-ride="false">
    <ol class="carousel-indicators">
      <li data-target="#games-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#games-carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active container-fluid">
        <h2> OG Games</h2>
